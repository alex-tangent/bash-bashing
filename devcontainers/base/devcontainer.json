{
  "name": "tangent-template",
  "image": "recrash/base:latest",
  // "dockerFile": "Dockerfile"
  "customizations": {
    "codespaces": {
      "openFiles": []
    },
    "vscode": {
      "settings": {
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": false,
        "python.languageServer": "Pylance",
        "breadcrumbs.enabled": true,
        "gitlens.currentLine.dateFormat": "DD.MM.YY",
        "javascript.updateImportsOnFileMove.enabled": "always",
        "typescript.updateImportsOnFileMove.enabled": "always"
      },
      "extensions": [
        "alefragnani.Bookmarks",
        "amazonwebservices.aws-toolkit-vscode",
        "bmalehorn.vscode-fish",
        "bradlc.vscode-tailwindcss",
        "christian-kohler.npm-intellisense",
        "christian-kohler.path-intellisense",
        "DavidAnson.vscode-markdownlint",
        "davidlday.languagetool-linter",
        "eamodio.gitlens",
        "esbenp.prettier-vscode",
        "formulahendry.auto-close-tag",
        "formulahendry.auto-rename-tag",
        "GitHub.codespaces",
        "Gruntfuggly.todo-tree",
        "mathe42.surreal-notebook",
        "mathe42.surrealql",
        "mechatroner.rainbow-csv",
        "mikestead.dotenv",
        "monokai.theme-monokai-pro-vscode",
        "ms-azuretools.vscode-docker",
        "ms-python.black-formatter",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter",
        "ms-toolsai.jupyter-keymap",
        "ms-toolsai.jupyter-renderers",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "PKief.material-icon-theme",
        "quicktype.quicktype",
        "redhat.vscode-yaml",
        "richie5um2.vscode-sort-json",
        "rome.rome",
        "steoates.autoimport",
        "streetsidesoftware.code-spell-checker",
        "streetsidesoftware.code-spell-checker-german",
        "streetsidesoftware.code-spell-checker-scientific-terms",
        "tamasfe.even-better-toml",
        "TheNuProjectContributors.vscode-nushell-lang",
        "tombonnike.vscode-status-bar-format-toggle",
        "Tyriar.sort-lines",
        "wix.vscode-import-cost",
        "yzhang.markdown-all-in-one",
        "Zignd.html-css-class-completion"
      ]
    }
  },
  //"waitFor": "postCreateCommand",
  "updateContentCommand": "poetry install && bun install",
  "postCreateCommand": "echo 'Poetry and Bun installed'",
  "postAttachCommand": {
    "server": ["bun run dev", "fish -l"]
  },
  "mounts": ["source=cache,target=/cache,type=bind"],
  "workspaceFolder": "/src",
  "remoteUser": "root",
  "forwardPorts": [3000]
}
